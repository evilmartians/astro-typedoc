---
import Navigation from './Navigation.astro'
import '../styles/md/reset.css'
import '../styles/md/table.css'
import '../styles/md/code.css'
import '../styles/md/markdown-margins.css'

const { frontmatter } = Astro.props
---

<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{frontmatter?.title}</title>
  </head>
  <body>
    <div class="at-layout">
      <div class="at-sidebar">
        <Navigation />
      </div>
      <div class="at-markdown-outer">
        <div class="at-markdown">
          <h1>{frontmatter?.title}</h1>
          <slot />
        </div>
      </div>
    </div>
  </body>
</html>

<style>
  .at-layout {
    display: grid;
    grid-template-columns: 250px auto;
    grid-gap: 24px;
  }

  .at-markdown {
    max-width: 900px;
    margin: 0 auto;
  }
</style>
