---
import Navigation from './Navigation.astro'

const { frontmatter } = Astro.props
---

<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{frontmatter?.title}</title>
  </head>
  <body>
    <div class="layout">
      <div class="sidebar">
        <Navigation />
      </div>
      <div class="content">
        <slot />
      </div>
    </div>
  </body>
</html>

<style>
  .layout {
    display: grid;
    grid-template-columns: 200px auto;
  }
</style>
