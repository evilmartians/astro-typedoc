---
import FlatNavigation from './FlatNavigation.astro'
import ModularNavigation from './ModularNavigation.astro'

import nav from '../nav.json'
---

{
  nav.type === 'flat' ? (
    <FlatNavigation nav={nav} />
  ) : (
    <ModularNavigation nav={nav} />
  )
}

<style is:global>
  .navigation {
    display: flex;
    flex-direction: column;
    position: fixed;
    overflow: auto;
    bottom: 0;
    top: 0;
    padding: 12px 0;
    width: 250px;
  }

  .nav-block {
    display: flex;
    flex-direction: column;
    margin-bottom: 16px;
  }

  .nav-block-title {
    font-size: 16px;
    margin-bottom: 12px;
  }

  .nav-item {
    font-size: 14px;
    color: rgb(82, 82, 91);
    text-decoration: none;
    padding: 4px 12px 4px 16px;
  }

  .nav-item:hover,
  .nav-item.is-active {
    background-color: rgb(229, 231, 235);
    color: rgb(24, 24, 27);
    border-radius: 4px;
  }
</style>
