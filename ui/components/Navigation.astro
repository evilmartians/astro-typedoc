---
import nav from '../nav.json'
---

{
  nav?.modules?.length ? (
    <nav class="navigation">
      {nav.modules.map(mod => (
        <div>
          Module: {mod.name} <br />
          {mod.items.map(modItem => (
            <div>
              <a href={modItem.url}>{modItem.title} </a>
            </div>
          ))}
        </div>
      ))}
    </nav>
  ) : (
    <nav class="navigation">
      {nav.items.map(item => {
        return <a href={item.url}>{item.title}</a>
      })}
    </nav>
  )
}
<style>
  .navigation {
    display: flex;
    flex-direction: column;
  }
</style>
